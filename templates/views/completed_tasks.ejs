<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="images/RemItT-removebg-preview.png" type="image/x-icon">
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <link rel="stylesheet" href="css/fontawesome.min.css" />
    <link rel="stylesheet" href="css/style_task.css" />
    <title>RemIt</title>
    
  </head>
  <body >
    <h1 class="head_task">Completed Tasks</h1>
    <% tasks.forEach(function(task){ var curD=new Date(); var timeRemain =
    task.taskDate.getTime() - curD.getTime(); var daysRemain=parseInt(timeRemain/(1000*3600*24));
    var priority=task.priority; %>
    <form action="/completed_task"  method="post">
    <div class="item">
      
      <p id="check-me">
        <%= task.taskname %> 
        <div id="circle-blue"></div>
        <p id="t"><%= task.projname %> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          <% if(priority=='low'){ %>
            <div id="circle-yellow"></div>
            <% } %>
          <% if(priority=='mid'){ %>
              <div id="circle-green"></div>
              <% } %>
              <% if(priority=='high'){ %>
                <div id="circle-red"></div>
                <% } %>
                <p id="pl"><%= task.priority %> &nbsp;&nbsp;&nbsp;&nbsp;
                  <p id="di">  <%= task.taskDate.toDateString() %> &nbsp;&nbsp;&nbsp;&nbsp; 
                  <p id="rd"> 
                    <% if(typeof completeTime != 'undefined' && completeTime) { %>
                  <%= task.completeTime.toDateString() %>
                  <% } %>
                 &nbsp;&nbsp;&nbsp;&nbsp;
        <a
          href="/del_tasks/<%= task._id %>"
          style="color: black; float: right; margin-right: 70px;"
          ><i class="fa fa-trash add task-delete" onclick="return confirm('Are you sure you want to delete project?')"></i
        ></a></p>
        <br />
      </p>
    </div>
  </form>
    <% })%>
  </body>
</html>
